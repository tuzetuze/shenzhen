<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".MainActivity">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_navy"
        android:elevation="4dp"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_navy"
            app:title="深圳住房"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.Business.Title1"
            app:navigationIcon="@drawable/ic_menu_24"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 欢迎卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Business.Card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欢迎使用深圳住房"
                        android:textAppearance="@style/TextAppearance.Business.Headline2"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="为您提供专业的住房信息查询服务"
                        android:textAppearance="@style/TextAppearance.Business.Body1"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 功能菜单 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="主要功能"
                    android:textAppearance="@style/TextAppearance.Business.Title1"
                    android:textColor="@color/text_primary" />

                <!-- 功能网格 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- 住房查询 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        style="@style/Widget.Business.Card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_home_24"
                                android:contentDescription="住房查询"
                                app:tint="@color/primary_navy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="住房查询"
                                android:textAppearance="@style/TextAppearance.Business.Title2"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 政策解读 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        style="@style/Widget.Business.Card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_policy_24"
                                android:contentDescription="政策解读"
                                app:tint="@color/primary_navy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="政策解读"
                                android:textAppearance="@style/TextAppearance.Business.Title2"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 申请指南 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        style="@style/Widget.Business.Card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_guide_24"
                                android:contentDescription="申请指南"
                                app:tint="@color/primary_navy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="申请指南"
                                android:textAppearance="@style/TextAppearance.Business.Title2"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 我的服务 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        style="@style/Widget.Business.Card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_person_24"
                                android:contentDescription="我的服务"
                                app:tint="@color/primary_navy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="我的服务"
                                android:textAppearance="@style/TextAppearance.Business.Title2"
                                android:textColor="@color/text_primary"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>

            <!-- 快捷操作 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="快捷操作"
                    android:textAppearance="@style/TextAppearance.Business.Title1"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="快速查询住房信息"
                        style="@style/Widget.Business.Button.Primary"
                        android:drawableStart="@drawable/ic_search_24"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPolicyQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="查询住房政策"
                        style="@style/Widget.Business.Button.Secondary"
                        android:drawableStart="@drawable/ic_policy_24"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApplicationGuide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="查看申请指南"
                        style="@style/Widget.Business.Button.Text"
                        android:drawableStart="@drawable/ic_guide_24"
                        android:drawablePadding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 底部导航 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_secondary"
        app:menu="@menu/bottom_navigation"
        app:itemIconTint="@color/primary_navy"
        app:itemTextColor="@color/text_secondary"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<!-- 抽屉导航 -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/background_secondary"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/drawer_navigation" />

</androidx.drawerlayout.widget.DrawerLayout>
