<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 商务化样式定义 -->
    
    <!-- 文本样式 -->
    <style name="TextAppearance.Business.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Business.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Business.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.Business.Title1" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.Business.Title2" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Business.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Business.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Business.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.Business.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <style name="Widget.Business.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/primary_navy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/primary_navy</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.Business.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_navy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">40dp</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Widget.Business.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
    </style>
    
    <style name="Widget.Business.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="android:background">@drawable/card_outlined_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- 输入框样式 -->
    <style name="Widget.Business.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/primary_navy</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <style name="Widget.Business.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <!-- 应用栏样式 -->
    <style name="Widget.Business.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/primary_navy</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="Widget.Business.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_navy</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- 列表项样式 -->
    <style name="Widget.Business.ListItem" parent="Widget.Material3.ListItem">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- 分割线样式 -->
    <style name="Widget.Business.Divider" parent="Widget.Material3.Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    
    <!-- 进度条样式 -->
    <style name="Widget.Business.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_navy</item>
        <item name="trackColor">@color/gray_200</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- 芯片样式 -->
    <style name="Widget.Business.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/primary_navy</item>
        <item name="chipBackgroundColor">@color/gray_100</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="Widget.Business.Chip.Selected" parent="Widget.Business.Chip">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/primary_navy</item>
        <item name="chipStrokeColor">@color/primary_navy</item>
    </style>
</resources>
